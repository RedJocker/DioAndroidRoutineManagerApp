<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style
        name="Theme.RoutineManagerApp"
        parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_base</item>
        <item name="colorPrimaryVariant">@color/white_darker</item>
        <item name="colorOnPrimary">@color/black_base</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_base</item>
        <item name="colorSecondaryVariant">@color/black_darker</item>
        <item name="colorOnSecondary">@color/white_base</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white_lighter</item>
    </style>
</resources>